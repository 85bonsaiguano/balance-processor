BP_ENV=development
BP_SERVER_HOST=0.0.0.0
BP_SERVER_PORT=8080

# Database Configuration for Docker - Optimized for high TPS
BP_DB_HOST=postgres
BP_DB_PORT=5432
BP_DB_USERNAME=postgres
BP_DB_PASSWORD=postgres
BP_DB_NAME=balance_processor
BP_DB_SSL_MODE=disable
BP_DB_MAX_OPEN_CONNS=200
BP_DB_MAX_IDLE_CONNS=100
BP_DB_CONN_MAX_LIFETIME_MINUTES=30
BP_DB_CONN_MAX_IDLE_TIME_MINUTES=15
BP_DB_QUERY_TIMEOUT_SECONDS=5
BP_DB_RETRY_ATTEMPTS=3
BP_DB_RETRY_DELAY_SECONDS=1

# Transaction Processing Settings
BP_TRANSACTION_CONCURRENCY_LEVEL=200
BP_TRANSACTION_LOCK_TIMEOUT_MS=5000
BP_TRANSACTION_MAX_RETRIES=3

# Logger Configuration
BP_LOGGER_LEVEL=info

# Docker PostgreSQL Settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=balance_processor
POSTGRES_PORT=15432
